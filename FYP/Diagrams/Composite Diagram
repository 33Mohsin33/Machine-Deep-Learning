@startuml
' Define classes and components involved in the system

package "Criminal Detection and Tracking System" {
    class "Edge Device" {
        +processData()
        +sendAlerts()
        +manageCameraFeed()
    }

    class "Camera Module" {
        +captureImage()
        +sendImageToEdge()
    }

    class "AI Module" <<stereotype>> {
        +detectActivity()
        +trackIndividual()
        +uploadData()
    }

    class "Police Interface" {
        +uploadImage()
        +receiveAlerts()
    }

    class "Database" {
        +storeImageData()
        +storeTrackingInfo()
    }

    ' Define interactions between components
    "Edge Device" --> "Camera Module" : manage feed
    "Edge Device" --> "AI Module" : send captured images
    "AI Module" --> "Database" : store tracking info
    "Police Interface" --> "AI Module" : upload image to track

    ' Show relationships between entities
    entity "Criminal Record" {
        +criminalID
        +crimeDetails
        +imageData
    }

    "Database" --> "Criminal Record" : stores
}

@enduml
