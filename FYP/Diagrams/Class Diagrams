@startuml
' Defining classes for the system
class "CriminalDetectionSystem" {
    +detectActivity(): void
    +trackIndividual(id: int): void
    +uploadImage(image: File): void
}

class "Camera" {
    +captureVideo(): Video
    +sendVideoToEdgeDevice(video: Video): void
}

class "EdgeDevice" {
    +processVideo(video: Video): DetectionData
    +runAIModel(model: AIModel): DetectionData
}

class "AIModel" {
    +loadModel(path: String): void
    +detectObjects(video: Video): DetectionData
    +trackObjects(detectionData: DetectionData): void
}

class "PoliceDatabase" {
    +storeDetectionData(data: DetectionData): void
    +searchSuspect(image: File): SuspectData
}

class "UI/Controller" {
    +displayDetectedData(data: DetectionData): void
    +alertPolice(data: SuspectData): void
}

' Relationships between classes
"Camera" --> "EdgeDevice" : Sends video
"EdgeDevice" --> "AIModel" : Runs model
"AIModel" --> "CriminalDetectionSystem" : Provides detection data
"CriminalDetectionSystem" --> "PoliceDatabase" : Stores data
"PoliceDatabase" --> "UI/Controller" : Sends suspect data
"UI/Controller" ..> "PoliceDatabase" : Queries suspect

@enduml
